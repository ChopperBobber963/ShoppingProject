@model UserViewModel

@{
    ViewData["Title"] = "Wishlist";
}
<h1 class="heading-margin text-center">My Wishlist</h1>
<table class="table">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Product Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Wishlist.Products)
        {
            <tr>
                <td class="align-middle">@item.Name</td>
                <td class="align-middle">@item.Price</td>
                <td class="align-middle">@item.ProductType</td>
                <td class="align-middle">
                    <form method="post" asp-controller="Wishlist" asp-action="RemoveFromWishlist"
                      asp-route-id=@item.Id>
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>