@model AddProductForm

@{
    ViewData["Title"] = "Delete Product";
}

<div class="row">
    <div class="col-6 offset-3">
        <h2 class="heading-margin text-center">Delete Product</h2>


        <form method="post" asp-action="DeleteConfirmed" asp-controller="Product">

            <input asp-for="Id" hidden />
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly>
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" readonly>
                <span asp-validation-for="Description" class="small text-danger"></span>
        </textarea>
            </div>
            <div>
                <label asp-for="ImageURL"></label>
                <input asp-for="ImageURL" class="form-control" readonly>
                <span asp-validation-for="ImageURL" class="small text-danger"></span>
            </div>
            <div>
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" readonly>
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductType">Product Type</label>
                <select asp-for="ProductType" disabled class="form-control">
                    <option>Video Games</option>
                    <option>Books</option>
                    <option>Smartphones</option>
                    <option>Laptops</option>
                    <option>Movies</option>
                    <option>Music</option>
                </select>
                </div>
                <input class="btn btn-outline-danger" type="submit" value="Delete" />
        </form>
    </div>
</div>
